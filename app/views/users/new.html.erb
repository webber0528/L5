<% if @users.errors.any? %>
<h3>エラーがあります。</h3>
<ul style="color: red">
<% @users.errors.full_messages.each do |err| %>
<li><%= err %></li>
<% end %>
</ul>
<% end %>


<%= form_for @users , url: {action: :create} do |f| %>
<%= f.label :uid, 'ユーザー名:' %>
<%= f.text_field :uid %>
<%= f.label :password, 'パスワード:' %>
<%= f.password_field :password %>
<%= f.label :password_confirmation, 'パスワード(確認)' %>
<%= f.password_field :password_confirmation %>
<%= f.submit '新規登録' %>
<% end %>
